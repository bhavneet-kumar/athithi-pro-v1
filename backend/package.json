{
  "name": "athitipro-leads-crm",
  "version": "1.0.0",
  "scripts": {
    "prestart": "echo '🔍 Running pre-start linting checks...' && npm run lint-fix && npm run lint-check && echo '✅ All linting checks passed! 🚀 Server can start safely.'",
    "start": "ts-node src/server.ts",
    "predev": "echo '🔍 Running pre-dev linting checks...' && npm run lint-fix && npm run lint-check-errors && echo '✅ Critical linting checks passed! 🚀 Dev server can start safely.'",
    "build": "tsc",
    "dev": "nodemon src/server.ts",
    "start:production": "npm run prestart && npm start",
    "start:skip-lint": "ts-node src/server.ts",
    "dev:skip-lint": "nodemon src/server.ts",
    "lint": "eslint .",
    "lint-fix": "eslint --fix .",
    "lint-check": "eslint . --max-warnings 0",
    "lint-check-errors": "eslint .",
    "lint:report": "eslint . --format=table",
    "tsc": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "code-quality": "npm run lint && npm run format:check && npm run tsc",
    "prepare": "husky",
    "dev:skip-lint-worker": "nodemon --exec \"node -r ts-node/register\" src/server.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings=0",
      "prettier --write",
      "git add"
    ],
    "*.{json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "dependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "axios": "^1.9.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.1.1",
    "datadog-metrics": "^0.11.0",
    "dotenv": "^16.0.3",
    "eslint-plugin-no-array-reduce": "^1.0.62",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "install": "^0.13.0",
    "ioredis": "^5.6.1",
    "js-yaml": "^4.1.0",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "nodemailer": "^7.0.3",
    "npm": "^11.4.1",
    "paseto": "^3.1.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "rate-limit-redis": "^4.2.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.8.2",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "@commitlint/types": "^19.0.0",
    "@eslint/compat": "^1.3.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.28.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/js-yaml": "^4.0.9",
    "@types/json2csv": "^5.0.7",
    "@types/node": "^20.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jsdoc": "^51.0.1",
    "eslint-plugin-n": "^17.20.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.2",
    "eslint-plugin-unicorn": "^59.0.1",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4",
    "typescript-eslint": "^8.34.0"
  }
}